<Window x:Class="Playground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playground"
        mc:Ignorable="d"
        Title="Playground" Height="450" Width="800">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        

        <Button Content="Start/Stop" Name="StartStopButton" HorizontalAlignment="Center" Padding="5" Margin="20" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Click="StartStopButton_Click"/>
        <Label  Content="0 Clicks" Name="LabelClick" HorizontalAlignment="Center" Margin="20" VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="0"/>
        <Canvas Name="FootballField"  Background="DarkGreen" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Ellipse Name="Ball" Width="15" Height="15" Fill="Black" Canvas.Left="20"   Canvas.Top="20"/>
        </Canvas>


    </Grid>
</Window>
